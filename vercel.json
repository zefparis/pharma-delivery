{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.10",
        "includeFiles": [
          "templates/**",
          "static/**",
          "*.py",
          "requirements.txt"
        ]
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/health",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/setup-db",
      "dest": "/api/setup_db.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "PYTHONUNBUFFERED": "1",
    "PYTHONPATH": "/var/task"
  },
  "build": {
    "env": {
      "PYTHONUNBUFFERED": "1"
    }
  }
}
